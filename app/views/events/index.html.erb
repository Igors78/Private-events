<div class="row">
    <div class="col-md-6">
        <h1>Past Events</h1>

        <table>
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @events.past.each do |event| %>
                <tr>
                    <td><%= event.description %></td>
                    <td><%= event.location %></td>
                    <td><%= event.date %></td>
                    <td><%= link_to 'Show', event %></td>
                    <td><%= link_to 'Edit', edit_event_path(event) %></td>
                    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>

        <br>

        <%= link_to 'New Event', new_event_path %>
    </div>
    <div class="col-md-6">
        <h1>Upcoming Events</h1>

        <table>
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @events.upcoming.each do |event| %>
                <tr>
                    <td><%= event.description %></td>
                    <td><%= event.location %></td>
                    <td><%= event.date %></td>
                    <td><%= link_to 'Show', event %></td>
                    <td><%= link_to 'Edit', edit_event_path(event) %></td>
                    <td><%= link_to 'Destroy', event, method: :delete,
                                               data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>

        <br>

        <%= link_to 'New Event', new_event_path %>
    </div>
</div>
