<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Past Events</h1>
            <% @events.past.each do |event| %>
            <div class="card" style="width: 18rem;">

                <div class="card-body">
                    <h5 class="card-title"><%= event.location %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= event.date %></h6>
                    <p class="card-text"><%= event.description %></p>
                    <a href="#" class="card-link"><%= link_to 'Show', event %></a>
                    <a href="#" class="card-link"><%= link_to 'Edit', edit_event_path(event) %></a>
                    <a href="#" class="card-link"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></a>

                </div>

            </div>
            <% end %>
            <%= link_to 'New Event', new_event_path %>
        </div>


        <div class="col-md-6">
            <h1>Past Events</h1>
            <% @events.upcoming.each do |event| %>
            <div class="card" style="width: 18rem;">

                <div class="card-body">
                    <h5 class="card-title"><%= event.location %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= event.date %></h6>
                    <p class="card-text"><%= event.description %></p>
                    <a href="#" class="card-link"><%= link_to 'Show', event %></a>
                    <a href="#" class="card-link"><%= link_to 'Edit', edit_event_path(event) %></a>
                    <a href="#" class="card-link"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></a>

                </div>

            </div>
            <% end %>
            <%= link_to 'New Event', new_event_path %>
        </div>
    </div>
</div>
